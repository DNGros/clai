/Voyager/profiles/.voyager_conf_ah_ptf
# Source this from your .bashrc to get common Voyager setup.
# For some reason, /usr/bin isn't in PATH by default
export PATH=/usr/bin:$PATH
# Whereis whereis?
alias whereis=type
alias clear=/bin/clear
# Respect file tags for ASCII/EBCDIC stuff.
export _BPXK_AUTOCVT=ON
export _CEE_RUNOPTS="FILETAG(AUTOCVT,AUTOTAG) POSIX(ON)"
export VOYAGER=/Voyager
# Set up for Python and Anaconda
export INSTALL=/Kepler/achicks
export RELEASE_PREFIX=
export RELEASE_DIR=$RELEASE_PREFIX/usr/lpp/Anaconda
export PYTHON_HOME=$RELEASE_PREFIX/usr/lpp/IBM/izoda/anaconda
export PYTHONHOME=$PYTHON_HOME
export LIBPATH=$PYTHON_HOME/lib:$LIBPATH
export FFI_LIB=$PYTHON_HOME/lib/ffi
export MANPATH=$PYTHON_HOME/share/man:$MANPATH
export PKG_CONFIG_PATH=$PYTHON_HOME/lib/pkgconfig:$PYTHON_HOME/share/pkgconfig
export CURL_CA_BUNDLE=$PYTHON_HOME/etc/ssl/cacert.pem
# Use bash 4.2 by default
export BASH42_PATH=$INSTALL/pkgs/bash-4.2.53-5
# Python installation suggests using the included TERMINFO database, which
# has some undesirable side effects.  Stick to the vanilla TERMINFO database.
export TERM=xterm
# export TERMINFO=$PYTHON_HOME/share/terminfo
export TERMINFO=/usr/share/lib/terminfo
# Voyager team setup.
# export PATH=$BASH42_PATH/bin:$VOYAGER/bin:$VOYAGER/usr/bin:$PYTHON_HOME/bin:/tools/bin:/local:$PATH
export PATH=$VOYAGER/bin:$VOYAGER/usr/bin:$PYTHON_HOME/bin:/tools/bin:/local:$PATH
export LIBPATH=$VOYAGER/usr/lib:$LIBPATH
export MANPATH=$VOYAGER/usr/man:$VOYAGER/usr/share/man:$MANPATH
# Java setup.  Set this to whatever is appropriate.
export JAVA_HOME=/java/builds/J8.0_64
# export IBM_JAVA_OPTIONS="-Dfile.encoding=UTF-8"
export IBM_JAVA_OPTIONS="-Dfile.encoding=ISO8859-1"
# Tell the user which bash the are running.
#bash --version
